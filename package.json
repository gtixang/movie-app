{
  "name": "angular-movie-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "build": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "start:api": "json-server --watch db.json --port 3000",
    "start:all": "concurrently \"npm run start:api\" \"npm start\"",
    "deploy": "npx angular-cli-ghpages --dir=dist/angular-movie-app",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "prettier": "prettier --write ."
  },
  "dependencies": {
    "@angular/animations": "^20.2.0",
    "@angular/common": "^20.2.0",
    "@angular/compiler": "^20.2.0",
    "@angular/core": "^20.2.0",
    "@angular/forms": "^20.2.0",
    "@angular/platform-browser": "^20.2.0",
    "@angular/platform-browser-dynamic": "^20.2.0",
    "@angular/router": "^20.2.0",
    "@ngrx/component": "^20.1.0",
    "@ngrx/effects": "^20.1.0",
    "@ngrx/router-store": "^20.1.0",
    "@ngrx/store": "^20.1.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.8.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.2.0",
    "@angular/cli": "^20.2.0",
    "@angular/compiler-cli": "^20.2.0",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/jasmine": "~5.1.0",
    "angular-cli-ghpages": "^2.0.0",
    "angular-eslint": "20.5.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sort-class-members": "^1.21.0",
    "jasmine-core": "~5.9.0",
    "json-server": "^0.17.4",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.1"
  }
